<Page x:Class="Project.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CartPage">
    <Grid>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Background="DarkOrchid" Grid.Row="0" FontSize="48">Cart</TextBlock>
        <TextBlock Background="DarkOrchid" Grid.Row="1" FontSize="18">If you would like to purchase the items in the cart, please choose "Purchase":</TextBlock>
        <Button Click="Purchase" Grid.Row="3" Background="DarkBlue" FontSize="36" FontStyle="Normal">Purchase</Button>
        <Button Click="goBack" Background="DarkRed" FontSize="36" Grid.Row="6">Go to Main Page</Button>
            </Grid>
</Page>
